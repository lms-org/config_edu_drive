<framework>
    <modulesToEnable logLevel="WARN">
        <module>ogre_window_manager</module>
        <module>socket_data_receiver</module>
        <module>image_converter_scaleup</module>
        <module>image_renderer</module>
    </modulesToEnable>
    <module>
        <name>ogre_window_manager</name>
        <executionType>ONLY_MAIN_THREAD</executionType>
    </module>
    <module>
        <name>socket_data_receiver</name>
        <config>
            <dataChannels>IMAGE</dataChannels>
            <ip>localhost</ip>
            <port>65002</port>
        </config>
    </module>
    <module>
        <name>image_converter_scaleup</name>
        <realName>image_converter</realName>
        <channelMapping from="INPUT_IMAGE" to="IMAGE"/>
        <channelMapping from="OUTPUT_IMAGE" to="IMAGE_HQ"/>
        <config>
            <scaleUp>1</scaleUp>
        </config>
    </module>
    <module>
        <name>image_renderer</name>
        <executionType>ONLY_MAIN_THREAD</executionType>
        <channelMapping from="IMAGE" to="IMAGE_HQ"/>
        <channelMapping priority="2" from="WINDOW" to="WINDOW"/>
    </module>
</framework>
